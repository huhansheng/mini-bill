.record-box-wrapper {
  height: 100%;
  display: flex;
  flex-direction: column;
}
.record-header-wrapper {
  padding: 20rpx;
  height: 250rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background: #FFECB3;
}
.record-header-icon {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: url("https://avatars1.githubusercontent.com/u/19321222?s=60&v=4");
  background-size: 100%;
}
.record-tab-wrapper {
  padding: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  border-bottom: 1px solid #f7f7f7; 
}
.tab-col-text {
  color: #FFC107;
}